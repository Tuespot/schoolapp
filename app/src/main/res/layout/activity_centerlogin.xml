<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tuesport"
    android:orientation="vertical"
    tools:context="com.tuespot.roundedcorner.Centerlogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:paddingTop="50dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="130dp"

                android:layout_height="120dp"
                android:background="@drawable/logoschool"/>
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:hint="Center Id"
            android:backgroundTint="#f24e4c"
            android:textColorHint="#f24e4c"
            android:textColor="#f24e4c"
            android:ems="10"
            android:id="@+id/mobilecenter"
            android:layout_gravity="center_horizontal" />

</android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"
            android:backgroundTint="#f24e4c"
            android:textAlignment="center"
            android:textColor="#f24e4c"
            android:textColorHint="#f24e4c"
            android:hint="Enter Password"
            android:ems="10"
            android:id="@+id/passwordcenter"
            android:layout_gravity="center_horizontal" />

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="50dp"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="LOG IN"
                android:id="@+id/logincenter"
                android:textColor="#f24e4c"
                android:textSize="20dp"
                android:background="@drawable/button_bg_stroke"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
