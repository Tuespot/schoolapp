<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tuesport"
    android:orientation="vertical"
    tools:context="com.tuespot.roundedcorner.Stafflogin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:paddingTop="50dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="130dp"

                android:layout_height="120dp"
                android:background="@drawable/logoschool"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:hint="Staff Id / Mobile Number"
            android:backgroundTint="#f24e4c"
            android:textColorHint="#f24e4c"
            android:textColor="#f24e4c"
            android:ems="10"
            android:id="@+id/staffmobile"
            android:layout_gravity="center_horizontal" />

</android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"
            android:backgroundTint="#f24e4c"
            android:textAlignment="center"
            android:textColor="#f24e4c"
            android:textColorHint="#f24e4c"
            android:hint="Enter Password"
            android:ems="10"
            android:id="@+id/staffpassword"
            android:layout_gravity="center_horizontal" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="50dp"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="LOG IN"
                android:id="@+id/loginstaff"
                android:textColor="#f24e4c"
                android:textSize="20dp"
                android:background="@drawable/button_bg_stroke"/>

          <!--  <Button
                android:layout_marginTop="20dp"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="register"
                android:id="@+id/registerstaff"
                android:textColor="#f24e4c"
                android:textSize="20dp"
                android:background="@drawable/button_bg_stroke"/>-->
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:layout_gravity="center">

              <!--  <TextView
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:text="Forgot your Password ? "
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:textColor="#f24e4c"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Click here"
                    android:textSize="20dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-22dp"
                    android:textAlignment="center"
                    android:textColor="#f24e4c"/>
-->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
