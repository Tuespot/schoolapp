<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tuesport"
    android:orientation="vertical"
    tools:context="com.tuespot.roundedcorner.Studentregister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:paddingTop="40dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/logoa"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName"
            android:backgroundTint="#f24e4c"
            android:textColor="#f24e4c"
            android:textColorHint="#f24e4c"
            android:textAlignment="center"
            android:hint="Roll No /  Registration No"
            android:ems="10"
            android:id="@+id/rollno" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:backgroundTint="#f24e4c"
            android:textColor="#f24e4c"
            android:textColorHint="#f24e4c"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Your Name"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/namestudent" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="date"
            android:hint="D.O.B"
            android:backgroundTint="#f24e4c"
            android:textColor="#f24e4c"
            android:textColorHint="#f24e4c"
            android:ems="10"
            android:id="@+id/dobstudent"
            android:layout_gravity="center_horizontal" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="phone"
            android:backgroundTint="#f24e4c"
            android:textColorHint="#f24e4c"
            android:textColor="#f24e4c"
            android:hint="Mobile Number"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/mobilestudent"
            android:layout_gravity="center_horizontal" />




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#f24e4c"
            android:textColor="#f24e4c"
            android:textColorHint="#f24e4c"
            android:hint="******"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/passwordstudent"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <Button
                android:layout_marginTop="20dp"
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="register"
                android:id="@+id/registerstudent"
                android:textColor="#f24e4c"
                android:textSize="20dp"
                android:background="@drawable/button_bg_stroke"/>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Already Register ? "
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="60dp"
                    android:textColor="#f24e4c"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Click here"
                    android:textSize="20dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-30dp"
                    android:textAlignment="center"
                    android:textColor="#f24e4c"
                    android:id="@+id/clickstudent"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
