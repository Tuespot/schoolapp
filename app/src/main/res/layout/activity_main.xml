<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tuespot.roundedcorner.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/coverpic"
            android:background="@drawable/amanlogo"/>

    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
       android:layout_gravity="center"
        android:layout_marginTop="-90dp"
        android:background="@drawable/logoschool"/>

    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background"
        android:orientation="horizontal">

        <LinearLayout android:layout_weight="0.20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <TextView
               android:layout_width="170dp"
               android:layout_height="50dp"
               android:text="INDIA"
              android:padding="7dp"
               android:textColor="#ffffff"
               android:layout_marginTop="10dp"
               android:gravity="center"
               android:layout_gravity="center"
               android:background="@drawable/rounded_corner"
               android:textSize="20dp"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="BHUTAN"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="U.A.E"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="AFGHANISTAN"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="CANADA"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>

            </LinearLayout>

        <LinearLayout android:layout_weight="0.20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="NEPAL"
                android:textColor="#ffffff"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="SRI LANKA"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:padding="7dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="QATAR"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:padding="7dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="U.K"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="BANGLADESH"
                android:layout_marginTop="10dp"
                android:padding="7dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_corner"
                android:textSize="20dp"/>
        </LinearLayout>

        </LinearLayout>
    <LinearLayout android:layout_weight="0.20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/btn"
        android:orientation="vertical">

    <Button

        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="CONTINUE"
        android:id="@+id/continu"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:background="@drawable/rounded_cornerr"/>
        </LinearLayout>

</LinearLayout>
